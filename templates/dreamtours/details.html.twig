{% extends 'layout.html.twig' %}
{% block title %} Details {% endblock %}

{% block main %}
<div class="container" style=" background-color: #565656; margin-top: 20px; padding: 20px">
    <div class="border rounded-lg" style="padding:20px">
        <h1 style="color:teal"> Vols Aller et Retour a {{ dest.DesDest }}</h1>
        <strong style="margin-left:100px;font-size: 25px">Code du Voyage : <span class="text-center" style="color: #AA3333; border-radius: 200px"></strong>
   <table style=" border: 1px lightgray solid;margin-left: 100px;margin-top: 50px;text-align: center">
       <tr>
           <th style="padding: 20px"> Image de la Ville</th>
           <th style="padding: 20px"> Nom de la Ville</th>
           <th style="padding: 20px"> Code de la Ville</th>
       </tr>
       {% for ville in dest.villes %}
       <tr style="border: 1px lightgray solid;font-size: 25px">
           <td style="padding:20px">
               <img src="{{ ville.ImageVille }}" style="float:left;width: 300px;height: 150px"/>
           </td>
           <td style="padding: 20px">
               {{ ville.DesVille }}
           </td>
           <td style="padding: 20px">
               {{ ville.codeVille }}
           </td>
           <td style="padding: 20px">
               <a href="{{ path('updateVille',{'id':ville.id}) }}"><button class="btn"></button></a>
           </td>
       </tr>
   </table>
    </div>
</div>
{% endblock %}