{% extends 'layout.html.twig' %}
{% block title %} Ville {% endblock %}
{% block main %}
    <div style="position:absolute;top:5px;width:100%;height: 500px;background-position: center;background-repeat: no-repeat;background-size: cover;background-image: url('https://www.vizeo.net/wp-content/uploads/2019/04/voyage_tranquille-min.jpg')">
        <h1 class="text-teal-600">{% if test %}
                Modifier une Ville
            {% else %}
                Ajouter une Ville
            {% endif %}
        </h1>
        <div style="margin-top: 80px">
            {{ form_start(formVille) }}
            <strong>{{ form_row(formDest.codeVille,{'attr':{'placeholder':'code de la ville'}}) }}</strong>
            <strong>{{ form_row(formDest.DesVille,{'attr':{'placeholder':'Description de la villen'}}) }}</strong>
            <strong>{{ form_row(formDest.ImageVille,{'attr':{'placeholder':'Image de la ville'}}) }}</strong>
            <strong>{{ form_row(formDest.DestVille,{'attr':{'placeholder':'destination de la ville'}}) }}</strong>
            <button type="submit" class="btn" style="background-color: #AA3333">
                {% if test %}
                    Modifier
                {% else %}
                    Ajouter
                {% endif %}
            </button>
        </div>
        {{ form_end(formVille) }}
    </div>
{% endblock %}