{% extends 'layout.html.twig' %}
{% block title %} Ville {% endblock %}
{% block main %}
    <div style="position:absolute;top:5px;width:100%;height: 500px;background-position: center;background-repeat: no-repeat;background-size: cover;background-image: url('https://www.vizeo.net/wp-content/uploads/2019/04/voyage_tranquille-min.jpg')">
        <h1 class="text-teal-600">
            Supprimer une Ville
        </h1>
        <div>
            {{ form_start(formVille) }}
            <strong>{{ form_row(formVille.codeVille,{'attr':{'placeholder':'code de la Ville'}}) }}</strong>
            <strong>{{ form_row(formVille.DesVille,{'attr':{'placeholder':'Description de la Ville'}}) }}</strong>
            <strong>{{ form_row(formVille.ImageVille,{'attr':{'placeholder':'Image de la Ville'}}) }}</strong>
            <strong>{{ form_row(formVille.DestVille,{'attr':{'placeholder':'Dest de la Ville'}}) }}</strong>
            <button type="submit" class="btn" style="background-color: #AA3333">
                Supprimer
            </button>
        </div>
        {{ form_end(formVille) }}
    </div>
{% endblock %}