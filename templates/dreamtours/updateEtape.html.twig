{% extends 'layout.html.twig' %}
{% block title %} Etape {% endblock %}
{% block main %}
    <div style="position:absolute;top:5px;width:100%;height: 500px;background-position: center;background-repeat: no-repeat;background-size: cover;background-image: url('https://www.vizeo.net/wp-content/uploads/2019/04/voyage_tranquille-min.jpg')">
        <h1 class="text-teal-600">{% if test %}
                Modifier une Etape
            {% else %}
                Ajouter une Etape
            {% endif %}
        </h1>
        <div style="margin-top: 80px">
            {{ form_start(formEtape) }}
            <strong>{{ form_row(formEtape.DureeEtape,{'attr':{'placeholder':'duree de la Etape'}}) }}</strong>
            <strong>{{ form_row(formEtape.OrdreEtape,{'attr':{'placeholder':'ordre de la Etape'}}) }}</strong>
            <strong>{{ form_row(formEtape.ImageEtape,{'attr':{'placeholder':'Image de la Etape'}}) }}</strong>
            <button type="submit" class="btn" style="background-color: #AA3333">
                {% if test %}
                    Modifier
                {% else %}
                    Ajouter
                {% endif %}
            </button>
        </div>
        {{ form_end(formEtape) }}
    </div>
{% endblock %}